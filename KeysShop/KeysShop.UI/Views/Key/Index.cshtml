@model IEnumerable<KeysShop.Core.Key>

@{
    ViewData["Title"] = "Каталог товарів";
    Layout = "~/Views/Shared/_BreezeLayout.cshtml";
}
<div class="content-wrapper pb-0 text-center">
<h1>@ViewData["Title"]</h1>
<div class="">
    <a class="btn btn-success" asp-action="Create">Додати товар</a>
</div>

<br />

    <tbody>
        <div class="container row">
        @foreach (var item in Model)
        {
                <div class="col-sm-3">
                    <div class="card card-block">

                        @*<img class="card-img-top img-thumbnail" style="height: 180px; width: 100%; display: block; src="/img/keys/@item.ImgPath" alt="@item.Name">*@
                        <img class="card-img-top img-thumbnail" style="height: 180px; width: 100%; display: block;" src="\@item.ImgPath" alt="@item.Name">
                        <div class="card-block">
                                 <h5 class="card-title">@item.Name</h5>
                                 <p class="card-text">Бренд: @item.Brand.Name</p>
                                 
                            <a class="btn btn-primary" asp-controller="Cart" asp-action="Buy" asp-route-id="@item.Id">В корзину</a>
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Редагувати</a>
                            <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Деталі</a>
                            <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                              </div>
                            </div>
                            </div>
        }
        </div>
    </tbody>

</div>