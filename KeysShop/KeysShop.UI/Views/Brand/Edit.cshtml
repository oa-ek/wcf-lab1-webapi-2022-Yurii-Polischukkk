@model KeysShop.Core.Brand
@{

    Layout = "~/Views/Shared/_BreezeLayout.cshtml";
}

<div class="content-wrapper pb-0 text-center">
<h4>Brand</h4>
    <hr />
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Id" type="hidden" />
                @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group row">
                            <label class="col-sm-3 col-form-label" asp-for="Name"></label>
                        <div class="col-sm-9">
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                            <label class="col-sm-3 col-form-label" asp-for="Description"></label>
                            <div class="col-sm-9">
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group row">                      
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                           
                    </div>
                </div>

            </div>
           
           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                </div>
                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
        </form>
    </div>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</div>